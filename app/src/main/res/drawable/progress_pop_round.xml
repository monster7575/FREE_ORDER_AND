<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#DA29416E" android:endColor="#DA29416E"
                android:angle="270" />

            <stroke
                android:width="0.5dip" android:color="#8f975d"/>

            <corners android:radius="10dip"/>

            <padding
                android:left="3dip"
                android:right="3dip"
                android:top="3dip"
                android:bottom="3dip" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#DA29416E" android:endColor="#DA29416E"
                android:angle="270" />

            <stroke
                android:width="2dip" android:color="#C61408"/>

            <corners android:radius="10dip"/>

            <padding
                android:left="3dip"
                android:right="3dip"
                android:top="3dip"
                android:bottom="3dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#DA29416E" android:endColor="#DA29416E"
                android:angle="270" />

            <corners android:radius="10dip"/>

            <padding
                android:left="3dip"
                android:right="3dip"
                android:top="3dip"
                android:bottom="3dip" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#DA29416E" android:endColor="#DA29416E"
                android:angle="270" />

            <stroke
                android:width="0.5dip" android:color="#898b75"/>

            <corners android:radius="10dip"/>

            <padding
                android:left="3dip"
                android:right="3dip"
                android:top="3dip"
                android:bottom="3dip" />
        </shape>
    </item>
</selector>